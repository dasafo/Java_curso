	//-----Es lo mismo que los if else de arriba comentados pero ahora esta hecho automaticamente en barra de herramientas: 
	//'Source'--->'Generate hashCode() and equals()'------>ISBN------>Generate
	
	private String titulo;
	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ISBN;
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Libro_80_I other = (Libro_80_I) obj;
		if (ISBN != other.ISBN)
			return false;
		return true;
	}
	//----------------------------------------------------------------------------------------------

	
	
	private String autor;
	private int ISBN;

}
